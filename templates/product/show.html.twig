{# templates/product/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Product #{{ product.id }} details{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Product #{{ product.id }} details</h1>

    <p>Category: <b>{{ product.category.name }}</b></p>
    <p>Title: <b>{{ product.title }}</b></p>
    <p>Description: <b>{{ product.description }}</b></p>
    <p>Price: <b>{{ product.price }}</b></p>

    {% if product.attributeValues is not empty %}
        <p>Attribute values:
            <ul>
                {% for attribute_value in product.attributeValues %}
                    <li>{{ attribute_value.title }}</li>
                {% endfor %}
            </ul>
        </p>
    {% endif %}

    <p>Image: <img src="{{ asset('uploads/brochures/' ~ product.brochure) }}" width="100"></p>

    <a href="{{ path('show_products_list') }}">Back to list</a> | <a href="{{ path('edit_product', {'productId': product.id}) }}">Edit</a>

</div>
{% endblock %}

{# templates/product/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Product #{{ product.id }} details{% endblock %}

{% block body %}

    <h1>Product #{{ product.id }} details</h1>

    <p>{{ product.title }}</p>
    <p>{{ product.description }}</p>
    <p>{{ product.price }}</p>

    <a href="{{ path('show_products_list') }}">Back to list</a>

{% endblock %}

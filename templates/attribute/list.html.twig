{% extends 'base.html.twig' %}

{% block title %}Attributes list{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>Attributes list</h1>

    {% for attribute in attributes %}
        Attribute: <b>{{ attribute.title }}</b>.

        {% if attribute.attributeValues is not empty %}
            Attribute values:
            <ul>
                {% for attribute_value in attribute.attributeValues %}
                    <li>{{ attribute_value.title }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endfor %}

</div>
{% endblock %}
